# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=my_group
DB_USER=root
DB_PASSWORD=root
DB_DIALECT=mysql
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AWS S3 / Wasabi Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mygroup-uploads
AWS_S3_BASE_URL=https://s3.us-east-1.wasabisys.com/mygroup-uploads

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@mygroup.com
EMAIL_FROM_NAME=My Group

# SMS Configuration (Optional)
SMS_API_URL=https://api.sms-provider.com/send
SMS_API_KEY=your-sms-api-key
SMS_FROM=MyGroup

# Frontend URL
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

